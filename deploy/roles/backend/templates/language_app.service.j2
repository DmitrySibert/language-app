[Unit]
Description=Language application Service

[Service]
User={{ host_user }}
Group={{ host_user }}
ExecStart={{ java_home }}/{{ java_name }}/bin/java -Xmx256m -jar {{host_app_destination}}/{{app_file_name}}
SuccessExitStatus=143
TimeoutStopSec=15
Restart=on-failure
RestartSec=15

[Install]
WantedBy=multi-user.target
